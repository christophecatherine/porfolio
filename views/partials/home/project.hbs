    {{!--
    Permet de cherher dans le input mes declarations de variables }}
    {{#if search }}
    <!-- SearchBar -->
    <div class="container mt-5">
        <div class="row mt-5">
            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text " id="basic-addon1">Recherche:</span>
                </div>
                <input id='searchBar' onkeyup="myFunction()" type="text" class="form-control" placeholder="Rechercher"
