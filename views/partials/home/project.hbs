                        <p class="card-text">
                            {{!--retranscrit le html en text}}
                            {{{ content }}}
                        </p>
                    </div>
                    <div class="card-footer">
                        <small class="text-muted">Last updated 3 mins ago</small>
                    </div>
                </a>
            </div>

            {{/each }}

        </div>
    </div>
</section>

<!-- Script Input searchbar  -->
<script>
    function myFunction() {
        // Declare variables 
        var input, filter, listCard, filterCard, a, i, txtValue;
        //input renvoie l'element de document avec son id unique 
        input = document.getElementById('searchBar');
        //filter renvoie la valeur de l'input convertie en majuscule
        filter = input.value.toUpperCase();
        //listcard renvoie l'element de document avec son id unique 
        listCard = document.getElementById("listCard");
        //filtercard renvoie la list et permet de recherche par element 
        filterCard = listCard.getElementsByClassName('filterCard');

        // retrouve les éléments de la liste et masque ceux qui ne correspondent pas à la requête de recherche
        //on demenade si i vout rien ou i recupere toute les card ou i increment la liste de card 
        for (i = 0; i < filterCard.length; i++) {
            //la variable p filtre i par la 1er lettre indexé
            p = filterCard[i].getElementsByTagName("a")[0];
            //la valeur de text represente le contenu du text ou le contenu du text visuel
            txtValue = (p.textContent || p.innerText)
//si la valeur du text 
            if (txtValue.toUpperCase().indexOf(filter) > -1) {
                filterCard[i].style.display = "";
            } else {
                filterCard[i].style.display = "none";
            }
        }
    }
</script>
<!-- / Script Input searchbar  -->