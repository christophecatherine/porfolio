<!-- collaps presentation -->
<div class="card" style="margin-top: 2em;">
    <div id="presentation" class="collapse" aria-labelledby="headingOne" data-parent="#accordionExample">
        <div class="card">
             <!--button create-->
            <button type="button" class="btn btn-warning btn-sm" style="background-color: #777; border-color :#000"data-toggle="modal" data-target="#modalCreate">
                <i class="fas fa-plus"></i>
            </button>
             <!-- / button create-->
            <table class="table">
                <!-- table presentation -->
                <!-- head de mon tableau -->
                <thead>
                    <tr>
                        <td scope="col">image</td>
                        <td scope="col">titre</td>
                        <td scope="col">date</td>
                        <td scope="col">description</td>
                        <td scope="col">actions</td>
                    </tr>
                </thead>
                <!-- body tableau -->
                <tbody>
                     <!-- item tableau -->
                    {{#each dbPresentation }}
                    <tr>
                        <th scope="col">
                            <img style="height: 35px;" src="assets/image/html.png" alt=" ">
                        </th>
                        <td> {{ title }} </td>
                        <td> {{ author }} </td>
                        <td> {{ content }} </td>
                        <td>
                            <button type="button" class="btn btn-warning btn-sm" data-toggle="modal"
                                data-target="#modalEdit">
                                <i class="far fa-edit"></i>
                            </button>
                            <button type="button" class="btn btn-danger btn-sm" data-toggle="modal"
                                data-target="#modalDelete">
                                <i class="far fa-trash-alt"></i>
                            </button>
                        </td>
                    </tr>
                    {{/each }}
                </tbody>
            </table>
        </div>
    </div>
</div>

