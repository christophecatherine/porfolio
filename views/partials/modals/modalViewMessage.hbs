{{!--
Modale Edit competence
--}}

<!-- Modal Edit -->
<div class="modal fade" id="modalEdit{{_id}}" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Modal Edit</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="col">
                    <p>Message de <u> {{ username }} </u> </p>
                    <p>le: {{ createDate }}</p>
                    <p>Sujet: {{ sujet }}</p>
                    <p>Message:</p>
                    <p> {{ message }} </p>
                </div>

                {{!-- Collapse de reponse message --}}
                <div class="accordion" id="accordionResponseMessage">

                    <div class="card">
                        <div class="card-header" id="headingReponseMessage">
                            <h2 class="mb-0">
                                <button class="btn btn-link btn-block text-left" type="button" data-toggle="collapse"
                                    data-target="#collapseResponseMessage" aria-expanded="true"
                                    aria-controls="collapseResponseMessage">
                                    Répondre au message
                                </button>
                            </h2>
                        </div>

                        <div id="collapseResponseMessage" class="collapse" aria-labelledby="headingReponseMessage"
                            data-parent="#accordionResponseMessage">
                            <div class="card-body">
                                <form action="/nodemailer" method="POST">
                                    <div class="form-group">
                                        <label for="destinataire-name" class="col-form-label">Destinataire</label>
                                        <input type="text" class="form-control" id="destinataire-name" name="email"
                                            value="{{ email }}">
                                    </div>
                                    <div class="form-group">
                                        <label for="object-text" class="col-form-label">Objet du message</label>
                                        <input type="text" class="form-control" id="object-text" name="sujet"
                                        value="{{ sujet }}">
                                    </div>
                                    <div class="form-group">
                                        <label for="message-text" class="col-form-label">Message</label>
                                        <textarea class="textarea" id='contentResponseMessage{{_id}}' name='content'
                                            placeholder="Textarea"></textarea>
                                        <script>
                                            const ed{{ _id }} = CKEDITOR.replace(`contentResponseMessage{{_id}}`, {
                                                entities_latin: false,
                                                uiColor: '#ff5cde'
                                            })
                                        </script>
                                    </div>
                                    <div class="form-group">
                                        <button type="button" class="btn btn-secondary"
                                            data-dismiss="modal">Fermer</button>
                                        <button type="submit" class="btn btn-primary">Répondre</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            </form>
        </div>
    </div>
</div>
<!-- / Modal Edit -->