{{!--
Modale Edit Présentation
--}}

<!-- Modal Edit -->
<div class="modal fade" id="modalEdit{{_id}}" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Modal Edit</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form method="POST" action="/presentation/{{_id}}?_method=PUT" enctype="multipart/form-data">
                    <div class="form-group">
                        <label for="recipient-name" class="col-form-label">Titre:</label>
                        <input type="text" class="form-control" name='title' id="recipient-name" value='{{ title }}'>
                    </div>
                    <div class="form-group">
                        <label for="message-text" class="col-form-label">Content:</label>
                        {{!-- !!! ne pas oublier le name='content' pour l'arch du body !!! --}}
                        <textarea class="textarea" id='contentEditPresentation{{ _id }}' name='content'
                            placeholder="Textarea"> {{ content }} </textarea>
                        {{!--script id CKEDITOR--}}
                        <script>
                            const ed{{ _id }} = CKEDITOR.replace(`contentEditPresentation{{_id}}`, {
                                entities_latin: false,
                                uiColor: '#ff5cde'
                            })
                            ed{{ _id }}.on('change', function (e) {//modification du contenu de l'éditeur
                                console.log(e.editor.getData())
                            })
                        </script>
                    </div>
                    <div class="form-group">
                        {{!-- Pour l'image ATTENTION le imgArticle sera le name récupéré par multer dans le middleware
                        --}}
                        <input type="file" name="imagePresentation">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary">Editer la prez</button>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
            </div>
        </div>
    </div>
</div>
<!-- / Modal Edit -->